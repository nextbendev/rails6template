<div class="row mt-5">
  <div class="col-md-8">
    <div class="row">
      <% @blogs.each do |blog| %>
      <div class="col-md-4">
        <div class="card mt-3">
          <div class="card-body">
            <h3><%= link_to blog.title, blog_path(blog.id) %></h3>
            <p><%= blog.content[0,200] %></p>
            <%= link_to "View", blog_path(blog.id), class: 'btn btn-primary' %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
