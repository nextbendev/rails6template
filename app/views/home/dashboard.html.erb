<div class="container-fluid mt-5">
  <div class="row">
    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4">
      <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Dashboard</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
          <div class="btn-group mr-2">
            <button type="button" class="btn btn-sm btn-outline-secondary">Share</button>
            <button type="button" class="btn btn-sm btn-outline-secondary">Export</button>
          </div>
          <button type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle">
            <span data-feather="calendar"></span>
            This week
          </button>
        </div>
      </div>

<div class="container">
      <h2>Blogs</h2>
      <div class="row mt-5">
        <div class="col-md-8">
          <div class="row">
            <% @blogs.each do |blog| %>
            <div class="col-md-4">
              <div class="card mt-3">
                <div class="card-body">
                  <h3><%= link_to blog.title, blog_path(blog.id) %></h3>
                  <p><%= blog.content[0,200] %></p>
                  <%= link_to "View", blog_path(blog.id), class: 'btn btn-primary' %>
                  <%= link_to "Edit", edit_blog_path(blog.id), class: 'btn btn-secondary' %>
                </div>
              </div>
            </div>
            <% end %>
          </div>
        </div>


        <div class="row mt-5">
          <h2>Categories</h2>
          <div class="col-md-12">
            <div class="row">
              <% @categories.each do |category| %>
              <div class="col-md-4">
                <div class="card mt-3">
                  <div class="card-body">
                    <h3><%= category.category %></h3>
                    <%= link_to 'Edit', edit_category_path(category), class: 'btn btn-primary' %>
                    <%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-secondary' %>
                  </div>
                </div>
              </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <h2>User List</h2>
    <div class="table-responsive">
      <table class="table table-striped table-sm">
        <thead>
          <tr>
            <th>Email Address</th>
            <th>Admin</th>
            <th>Creation Date</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
              <td><%=  user.email %></td>
              <td><%=  user.admin %></td>
              <td><%=  user.created_at %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
